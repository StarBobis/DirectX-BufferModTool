<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="DBMT.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:DBMT"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        
        
        
    <StackPanel Orientation="Vertical" Margin="20">
        <!-- 开关配置项 -->
        <Border Margin="0,3" BorderBrush="Gray" BorderThickness="1" CornerRadius="5" Height="Auto">
            <Grid>
                <!-- 定义行 -->
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <!-- 可以根据需要添加更多行 -->
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="200"/>
                </Grid.ColumnDefinitions>
            
                <TextBlock Text="退出DBMT之前自动清理生成的日志文件" 
                    VerticalAlignment="Center" Margin="10,0,10,0" Grid.Row="0" Grid.Column="0"/>
                <ToggleSwitch Grid.Column="1"  Grid.Row="0"
         
             HorizontalAlignment="Stretch"
             VerticalAlignment="Center" 
                       Margin="5,5,5,5"/>
            
                <TextBlock Text="退出DBMT之前自动清理Dump生成的FrameAnalysis文件夹" 
                    VerticalAlignment="Center" Margin="10,0,10,0" Grid.Row="1" Grid.Column="0"/>
                <ToggleSwitch Grid.Column="1"  Grid.Row="1"
             HorizontalAlignment="Stretch"
             VerticalAlignment="Center" 
       Margin="5,5,5,5"/>
            

                    <TextBlock Text="一键逆向时生成模型文件的命名风格" VerticalAlignment="Center" Margin="10,0,10,0"  Grid.Row="2" Grid.Column="0"/>
                <ComboBox Grid.Column="1"  HorizontalAlignment="Stretch" Grid.Row="2"
             PlaceholderText="模型命名风格"
             VerticalAlignment="Center" Margin="5,5,5,5">
                    <x:String>GIMI</x:String>
                    <x:String>Number</x:String>
                </ComboBox>


                    <TextBlock Text="保持DBMT窗口总是在屏幕最高层级显示，确保一直处于可视状态" 
             VerticalAlignment="Center" Margin="10,0,10,0" Grid.Row="3" Grid.Column="0"/>
                    <ToggleSwitch Grid.Column="1"  Grid.Row="3"
      HorizontalAlignment="Stretch"
      VerticalAlignment="Center" 
Margin="5,5,5,5"/>

                </Grid>

        </Border>
  

        <!-- 下拉框配置项 -->
        <Border Margin="0,3" BorderBrush="Gray" BorderThickness="1" CornerRadius="5" Height="50">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <!-- 左侧：描述 -->
                <TextBlock Text="选择主题颜色" VerticalAlignment="Center" Margin="10,0,10,0"/>
                <ComboBox Grid.Column="1"  HorizontalAlignment="Right"
                  PlaceholderText="选择一个颜色"
                  VerticalAlignment="Center" Margin="0,0,10,0">
                    <x:String>蓝色</x:String>
                    <x:String>红色</x:String>
                    <x:String>绿色</x:String>
                    <x:String>黄色</x:String>
                </ComboBox>
            </Grid>
        </Border>

        <!-- 开关配置项 -->
        <Border Margin="0,3" BorderBrush="Gray" BorderThickness="1" CornerRadius="5" Height="50">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- 左侧：描述 -->
                <TextBlock Text="接收通知" VerticalAlignment="Center" Margin="10,0,10,0"/>

                <!-- 右侧：开关 -->
                <ToggleSwitch Grid.Column="1"  
                      IsOn="{Binding IsNotificationsEnabled, Mode=TwoWay}"
                      OnContent="开启" 
                      OffContent="关闭"
                      HorizontalAlignment="Right"
                      VerticalAlignment="Center" Margin="0,0,0,0"/>
            </Grid>
        </Border>

        <!-- 再添加一个下拉框配置项 -->
        <Border Margin="0,3" BorderBrush="Gray" BorderThickness="1" CornerRadius="5" Height="50">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <!-- 左侧：描述 -->
                <TextBlock Text="选择默认浏览器" VerticalAlignment="Center" Margin="10,0,10,0"/>

                <!-- 右侧：下拉框 -->
                <ComboBox Grid.Column="1" 
                  PlaceholderText="选择一个浏览器"
                  VerticalAlignment="Center" Margin="0,0,10,0" HorizontalAlignment="Right">
                    <x:String>Edge</x:String>
                    <x:String>Chrome</x:String>
                    <x:String>Firefox</x:String>
                </ComboBox>
            </Grid>
        </Border>

    </StackPanel>
    </ScrollViewer>
</Page>
